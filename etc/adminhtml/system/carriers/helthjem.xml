<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="vipps_helthjem" translate="label" type="multiselect" sortOrder="50"
           showInDefault="1" showInWebsite="1" showInStore="1">
        <label>[Vipps] Helthjem</label>
        <field id="active" translate="label" type="select" showInDefault="1" showInWebsite="1"
               showInStore="1" sortOrder="4">
            <label>Enable Helthjem Shipping integration</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>carriers/vipps_helthjem/active</config_path>
        </field>
        <field id="username" translate="label"
               sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Username</label>
            <config_path>carriers/vipps_helthjem/username</config_path>
            <depends>
                <field id="active">1</field>
            </depends>
        </field>
        <field id="password" translate="label" type="obscure" sortOrder="30"
               showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Password</label>
            <config_path>carriers/vipps_helthjem/password</config_path>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
            <depends>
                <field id="active">1</field>
            </depends>
        </field>
        <field id="shop_id" translate="label" sortOrder="30"
               showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Shop Id</label>
            <config_path>carriers/vipps_helthjem/shop_id</config_path>
            <depends>
                <field id="active">1</field>
            </depends>
        </field>
    </group>
</include>

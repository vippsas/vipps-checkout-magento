                        <![CDATA[Client Secret]]>
                    </comment>
                    <tooltip>Instabox Client Secret</tooltip>
                    <config_path>payment/vipps_v2/checkout_instabox_client_secret</config_path>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id="checkout_instabox_active">1</field>
                    </depends>
                </field>
                <field id="method_name" translate="label" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Method Name</label>
                    <config_path>payment/vipps_v2/checkout_instabox_method_name</config_path>
                </field>
                <field id="title" translate="label" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                    <config_path>payment/vipps_v2/checkout_instabox_title</config_path>
                </field>
            </group>
            <group id="logistics_integrations_helthjem" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="50">
                <label>Helthjem</label>
                <field id="checkout_helthjem_active" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="10">
                    <label>Enable Helthjem</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>payment/vipps_v2/checkout_helthjem_active</config_path>
                </field>
                <field id="checkout_helthjem_username" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>User Name</label>
                    <config_path>payment/vipps_v2/checkout_helthjem_username</config_path>

                </field>
                <field id="checkout_helthjem_shop_id" translate="label" sortOrder="35" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Shop Id</label>
                    <config_path>payment/vipps_v2/checkout_helthjem_shop_id</config_path>
                    <depends>
                        <field id="checkout_helthjem_active">1</field>
                    </depends>
                </field>
                <field id="method_name" translate="label" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Method Name</label>
                    <config_path>payment/vipps_v2/checkout_helthjem_method_name</config_path>
